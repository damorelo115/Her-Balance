<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="herbalance.herbalance.ActivityLevelController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Label for user selection of activity level -->
    <Label text="Select your typical activity level" />

    <!-- Implementing checkboxes for selecting wellness areas -->
    <CheckBox fx:id="sedentaryCheckBox" text="Sedentary" />
    <CheckBox fx:id="moderatelyActiveCheckBox" text="Moderately Active" />
    <CheckBox fx:id="highlyActiveCheckBox" text="Highly Active" />

    <!-- Submit button for confirming user selections -->
    <Button fx:id="submitButton" text="Submit" onAction="#onSubmitButtonClick" />

    <!-- Next button for going to Activity Level page -->
    <Button fx:id="nextButton" text="Next" onAction="#onNextButtonClick" visible="false" />
</VBox>