<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="herbalance.herbalance.MotivateController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Label asking user if they would like to receive recommendations -->
    <Label text="Would you like to receive personalized workout or wellness plan recommendations based on your profile?" />

    <!-- Implementing checkboxes for selecting motivations  -->
    <CheckBox fx:id="personalCheckBox" text="Personal Growth" />
    <CheckBox fx:id="mentalCheckBox" text="Mental Health" />
    <CheckBox fx:id="physicalCheckBox" text="Improved Physical Health" />
    <CheckBox fx:id="energyCheckBox" text="Increased Energy Levels" />
    <CheckBox fx:id="stressCheckBox" text="Stress Relief" />
    <CheckBox fx:id="disciplineCheckBox" text="Self-Discipline" />
    <CheckBox fx:id="longHealthCheckBox" text="Long-Tern Health" />
    <CheckBox fx:id="confidenceCheckBox" text="Confidence Boost" />
    <CheckBox fx:id="noneCheckBox" text="None of the Above" />


    <!-- Submit button for confirming user selections -->
    <Button fx:id="submitButton" text="Submit" onAction="#onSubmitButtonClick" />

    <!-- Next button for going to Reminders page -->
    <Button fx:id="nextButton" text="Next" onAction="#onNextButtonClick" visible="false" />
</VBox>
