<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="herbalance.herbalance.DietController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Label for user selection of dietary preferences -->
    <Label text="Select your dietary preference" />

    <!-- Implementing checkboxes for selecting dietary preferences -->
    <CheckBox fx:id="vegetarianCheckBox" text="Vegetarian" />
    <CheckBox fx:id="veganCheckBox" text="Vegan" />
    <CheckBox fx:id="glutenFreeCheckBox" text="Gluten-free" />
    <CheckBox fx:id="otherCheckBox" text="Other" />
    <CheckBox fx:id="noneCheckBox" text="None" />

    <!-- Submit button for confirming user selections -->
    <Button fx:id="submitButton" text="Submit" onAction="#onSubmitButtonClick" />

    <!-- Next button for going to Activity Level page -->
    <Button fx:id="nextButton" text="Next" onAction="#onNextButtonClick" visible="false" />
</VBox>
