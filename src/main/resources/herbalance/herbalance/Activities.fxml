<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="herbalance.herbalance.ActivitiesController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Label for user selection of stress level -->
    <Label text="What types of physical activities do you enjoy?" />

    <!-- Implementing checkboxes for selecting stress level -->
    <CheckBox fx:id="yogaCheckBox" text="Yoga" />
    <CheckBox fx:id="strengthCheckBox" text="Strength Training" />
    <CheckBox fx:id="runningCheckBox" text="Running" />
    <CheckBox fx:id="cyclingCheckBox" text="Cycling" />
    <CheckBox fx:id="swimmingCheckBox" text="Swimming" />
    <CheckBox fx:id="hikingCheckBox" text="Hiking" />
    <CheckBox fx:id="noneCheckBox" text="None of the above" />


    <!-- Submit button for confirming user selections -->
    <Button fx:id="submitButton" text="Submit" onAction="#onSubmitButtonClick" />

    <!-- Next button for going to Motivations page -->
    <Button fx:id="nextButton" text="Next" onAction="#onNextButtonClick" visible="false" />
</VBox>
