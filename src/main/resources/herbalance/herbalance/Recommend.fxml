<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="herbalance.herbalance.RecommendController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Label for user selection of recommendation option -->
    <Label text="Would you like to receive personalized recommendations and plans based on your profile?" />

    <!-- Implementing checkboxes for selecting recommendation options -->
    <CheckBox fx:id="yesCheckBox" text="Yes" />
    <CheckBox fx:id="noCheckBox" text="No" />


    <!-- Submit button for confirming user selections -->
    <Button fx:id="submitButton" text="Submit" onAction="#onSubmitButtonClick" />

    <!-- Next button for going to Reminders page -->
    <Button fx:id="nextButton" text="Next" onAction="#onNextButtonClick" visible="false" />
</VBox>