<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="herbalance.herbalance.SleepDurationController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Label for user selection of sleep duration -->
    <Label text="Select your typical sleep duration" />

    <!-- Implementing checkboxes for selecting wellness areas -->
    <CheckBox fx:id="lessThanFourCheckBox" text="Less than 4 hours" />
    <CheckBox fx:id="fourToFiveCheckBox" text="4-5 hours" />
    <CheckBox fx:id="fiveToSixCheckBox" text="5-6 hours" />
    <CheckBox fx:id="sixToSevenCheckBox" text="6-7 hours" />
    <CheckBox fx:id="sevenToEightCheckBox" text="7-8 hours" />
    <CheckBox fx:id="moreThanEightCheckBox" text="More than 8 hours" />

    <!-- Submit button for confirming user selections -->
    <Button fx:id="submitButton" text="Submit" onAction="#onSubmitButtonClick" />

    <!-- Next button for going to Activity Level page -->
    <Button fx:id="nextButton" text="Next" onAction="#onNextButtonClick" visible="false" />
</VBox>
